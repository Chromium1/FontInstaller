<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chromium.fontinstaller.ui.fontinstall.PreviewFragment"
    android:background="@color/white_100_opacity"
    android:padding="16dp">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.chromium.fontinstaller.ui.common.AutoScaleTextView
            android:id="@+id/text1"
            android:textSize="100dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/black_100_opacity"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:max_lines="1"/>

        <com.chromium.fontinstaller.ui.common.AutoScaleTextView
            android:id="@+id/text2"
            android:textSize="100dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/black_100_opacity"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:max_lines="1" />

        <com.chromium.fontinstaller.ui.common.AutoScaleTextView
            android:id="@+id/text3"
            android:textSize="100dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/black_100_opacity"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:max_lines="1"/>

        <com.chromium.fontinstaller.ui.common.AutoScaleTextView
            android:id="@+id/text4"
            android:textSize="100dp"
            android:gravity="left|center_vertical"
            android:textColor="@color/black_100_opacity"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:max_lines="1" />
    </LinearLayout>
</FrameLayout>
