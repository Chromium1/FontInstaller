<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chromium.fontinstaller.ui.font.FontActivity">

    <include
        layout="@layout/app_bar_light"
        android:id="@+id/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:layout_above="@+id/bottom_bar">

        <!--<FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->
        <android.support.v4.view.ViewPager
            android:id="@+id/preview_pager"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        android:paddingLeft="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/font_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/white_100_opacity"
            android:textSize="24dp"
            android:fontFamily="sans-serif-medium" />

    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/install_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_file_download_white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="72dp"
        app:fab_colorNormal="@color/accent"
        app:fab_colorPressed="@color/accent_light"
        app:fab_colorRipple="@color/accent_light" />
</RelativeLayout>
